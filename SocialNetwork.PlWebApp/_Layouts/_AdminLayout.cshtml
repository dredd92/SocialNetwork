<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <nav class="navbar navbar-default">
        <ul class="nav navbar-nav">
            <li class="nav"><a href="~/Admin">Admin page</a></li>
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav">
                    <form id="SearchForm" class="form-group" method="get" action="~/User/Search">
                        <fieldset>
                            <input id="SearchInput" class="input-sm form-control" type="text" name="name" placeholder="Find people" />
                        </fieldset>
                    </form>
                </li>
                <li class="nav">
                    <a href="~/Admin/AddAdmin">Add another admin</a>
                </li>
                <li class="nav navbar-right">
                    <a href="~/User/LogOff">Sign out</a>
                </li>
            }
        </ul>
    </nav>
    <div class="container">
        <div class="row">
            @RenderBody()
        </div>
    </div>
    <footer class="panel-footer text-center">
        Circles&trade;
    </footer>
    <script src="~/scripts/jquery-1.9.1.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script stc="~/scripts/search.js"></script>
    @RenderSection("Scripts", required: false);
</body>
</html>